<div class="<%= comment.plus - comment.minus >= 0 ? 'text-success' : 'text-danger' %> likes">
  <p class="result"><%= comment.plus - comment.minus %></p>
  <div class="info">
    <p class="text-success"> <%= comment.plus %></p>
    <p class="text-danger"><%= -comment.minus %></p>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $(".likes").hover(function() {
            $(".info", this).show();
            $(".result", this).hide();
        }, function() {
            $(".info", this).hide();
            $(".result", this).show();
        });
    });
</script>
