<div class="search">
  <%= form_tag(posts_path, method: :get, class: 'input-group') do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Search', class: 'rounded-left form-control'%>
    <div class="input-group-append">
      <%= button_tag(type: 'submit', class: 'btn btn-outline-primary') do %>
        <i class='glyphicon glyphicon-search'></i>
      <% end %>
    </div>
  <% end %>
</div>
