<h4>Add a comment:</h4>
<%= form_with(model: [ @post, @post.comments.build ], local: true, class: 'form-group') do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter, value: (current_user.name if current_user), class: 'form-control' %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, class: 'form-control' %>
  </p>
  <p>
    <%= form.submit class: 'btn btn-outline-primary' %>
  </p>
<% end %>
