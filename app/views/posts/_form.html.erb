<div class="row justify-content-center align-items-center h-100">
  <%= form_with(model: @post, html: { multipart: true }, local: true) do |form| %>
    <% if @post.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h4><%= pluralize(@post.errors.count, 'error') %></h4>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= form.label :description, 'Description:' %><br>
      <%= tinymce %>
      <%= form.text_area :description, class: 'tinymce', rows: '2' %>
    </div>

    <div class="form-group">
      <%= form.label :body, 'Post:' %><br>
      <%= tinymce %>
      <%= form.text_area :body, class: 'tinymce', rows: '5' %>
    </div>

    <div class="form-group custom-file">
      <%= form.label :img, 'Upload image', class: 'custom-file-label'%><br>
      <%= form.file_field :img, class: 'custom-file-input' %>
    </div>

    <div class="form-group">
      <div class="input-group" >
        <span class="input-group-prepend" >
          <span class="input-group-text"><i class="glyphicon glyphicon-facetime-video"></i></span>
        </span>
        <%= form.text_field :video, class: 'form-control', placeholder: 'Share video from youtube' %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-group" >
        <span class="input-group-prepend" >
          <span class="input-group-text"><i class="glyphicon glyphicon-list"></i></span>
        </span>
        <%= form.text_field :tag_list, class: 'form-control', value: form.object.tag_list.to_s, placeholder: 'Tags'%>
      </div>
    </div>
    <div class="form-group">
      <%= form.check_box :publish %> Publish
    </div>
    <div class="form-group">
      <%= form.submit class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>
