<h2 class="text-center">Blog Rails</h2>
<h3 class="text-center"><%= params[:name] %></h3>

<%= render 'order' %>
<%= render 'alert' %>

<% @posts.each do |post| %>
  <% if post.publish %>
    <div class="post clearfix border-bottom">
      <h4><%= link_to post.title, post_path(post) %></h4>

      <% if post.img? %>
        <%= image_tag post.img.url(:thumb), class: 'img-thumbnail thumb'%>
      <% elsif post.video? %>
        <iframe width="250"
                src="https://www.youtube.com/embed/<%= post.video.split('/').last %>"
                class="thumb">
        </iframe>
      <% end %>

      <p>
        <%= post.description.html_safe %>
        <%= link_to 'more', post_path(post) %>
      </p>

      <div class="clearfix post-info float-right row">
        <div class="col-auto">
          <%= link_to "#{post_path(post)}#comments" do %>
            <i class="glyphicon glyphicon-comment"></i>
            <%= post.comments.size %>
          <% end %>
        </div>
        <div class="col-auto">
          <i class="glyphicon glyphicon-star"></i>
          <%= post.rating %>
        </div>
        <div class="col-auto">
          <i class="glyphicon glyphicon-eye-open"></i>
          <%= post.views %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="text-center">
  <%= will_paginate @posts, container: false %>
</div>

