<h2 class="text-center">Blog Rails</h2>

<% @posts.each do |post| %>
  <div class="post clearfix">
    <h4><%= link_to post.title, post_path(post) %></h4>

    <% if post.img? %>
      <%= image_tag post.img.url(:thumb), class: 'img-thumbnail thumb'%>
    <% end %>

    <p>
      <%= post.body.first(400) %>
      <% if post.body.size > 400 %>
        <%= link_to 'more', post_path(post) %>
      <% end %>
    </p>
  </div>
  <div class="clearfix border-bottom post-info">
    <i class="float-right">Comments <%= post.comments.size %></i>
  </div>
<% end %>
