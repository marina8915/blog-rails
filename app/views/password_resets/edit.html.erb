<h1 class="text-center">Reset Password</h1>
<div class="row justify-content-center align-items-center h-100">
  <%= form_for @user, url: password_reset_path(params[:id]), class: 'form' do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, 'error') %></h4>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <div class="input-group">
        <span class="input-group-prepend">
          <span class="input-group-text"><i class="glyphicon glyphicon-lock"></i></span>
        </span>
        <%= f.password_field :password, placeholder: 'Password', class:'form-control' %>
      </div>
    </div>
    <div class="form-group text-center">
      <%= f.submit 'Update password', class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>
