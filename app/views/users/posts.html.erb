<h3>My posts</h3>

<% if @posts.empty? %>
  <p>No posts</p>
  <%= link_to 'New post', new_post_path %>
<% else %>
    <% @posts.each do |post| %>
    <div class="border-bottom post clearfix">
      <nav class="navbar navbar-expand-lg navbar-light">
        <h4><%= link_to post.title, post_path(post), class: 'navbar-brand' %></h4>
        <ul class="navbar-nav mr-auto post-info">
          <li class="nav-item">
            <%= link_to 'Edit', edit_post_path(post) %>
          </li>
          <li class="nav-item">
            <%= link_to 'Delete', post_path(post), method: :delete,
                        data: { confirm: 'Are you sure?'} %>
          </li>
          <li class="nav-item">
            <p class="<%= post.publish ? 'padding': 'nav-link' %>">
              Status: <%= post.publish ? 'Published' : 'Not published' %>
            </p>
          </li>
          <li class="nav-item">
            <i class="glyphicon glyphicon-star"></i>
            <%= post.rating %>
          </li>
          <li class="nav-item">
            <%= link_to "#{post_path(post)}#comments" do %>
              <i class="glyphicon glyphicon-comment"></i>
              <%= post.comments.size %>
            <% end %>
          </li>
          <li class="nav-item">
            <i class="glyphicon glyphicon-eye-open"></i>
            <%= post.views %>
          </li>
        </ul>
      </nav>

      <% if post.img? %>
        <%= image_tag post.img.url(:thumb), class: 'img-thumbnail thumb'%>
      <% elsif post.video? %>
        <iframe width="250"
                src="https://www.youtube.com/embed/<%= post.video.split('/').last %>"
                class="thumb">
        </iframe>
      <% end %>

      <p>
        <%= post.description.html_safe %>
        <%= link_to 'more', post_path(post) %>
      </p>
    </div>
  <% end %>
<% end %>

<%= will_paginate @posts, list_classes: %w(pagination justify-content-center) %>
