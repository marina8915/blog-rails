<ul class="nav justify-content-center bg-header">
  <li class="nav-item"><%= link_to 'Blog', root_path, class: 'nav-link text-light' %></li>
  <% if current_user %>
    <li class="nav-item">
      <%= link_to new_post_path, class: 'nav-link text-light' do %>
        <i class="glyphicon glyphicon-plus"></i> New post
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to user_path(current_user.id), class: 'nav-link text-light' do %>
        <i class="glyphicon glyphicon-user"></i>
        <%= current_user.name %>
      <% end %>
    </li>
    <li class="nav-item"><%= link_to 'Exit', logout_path, method: :delete,
                                     class: 'nav-link text-light' %></li>
  <% else %>
    <li class="nav-item"><%= link_to 'Log in', new_session_path, class: 'nav-link text-light' %></li>
    <li class="nav-item"><%= link_to 'Sign up', new_user_path, class: 'nav-link text-light' %></li>
  <% end %>
</ul>
