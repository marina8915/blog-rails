<h3 class="text-center">Log In</h3>
<div class="row justify-content-center align-items-center h-100">
  <%= form_tag sessions_path, class: 'form-user' do %>
    <div class="form-group">
      <%= text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Name' %>
    </div>
    <div class="form-group">
      <%= password_field_tag :password, '', class:'form-control', placeholder: 'Password' %>
    </div>
    <div class="form-group text-center">
      <%= submit_tag 'Sign In', class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>
<div class="text-center">
  <%= link_to 'Forgot password?', new_password_reset_path %>
</div>
