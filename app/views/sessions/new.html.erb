<h1>Log In</h1>
<%= form_tag sessions_path class: 'form-group' do %>
  <p>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], class: 'form-control' %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, '', class:'form-control' %>
  </p>
  <%= submit_tag 'Sign In', :class => 'btn btn-outline-primary' %>
<% end %>